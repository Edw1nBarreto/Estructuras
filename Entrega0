Hay 3 archivos; comandos.h comandos.cxx y main.cxx

----------------------comandos.h-----------------------------------
#ifndef COMANDOS_H
#define COMANDOS_H
#include <string>

using namespace std;

enum Comandos  //Un tipo de estructura de constantes, en este caso, el nombre de los comandos
{//enum enumera xd
    AYUDA, //0
    CARGAR, //1
    LISTAR_SECUENCIAS, //2
    HISTOGRAMA, //3
    ES_SUBSECUENCIA, //4
    ENMASCARAR, //5
    GUARDAR, //6
    CODIFICAR, //7
    DECODIFICAR, //8
    RUTA_MAS_CORTA, //9
    BASE_REMOTA, //10
    SALIR, //11
    INVALIDO //12
};

Comandos procesamiento (string cmd);

 #endif // COMANDOS_H
----------------------comandos.h-----------------------------------

-----------------------comandos.cxx--------------------------------
#include "comandos.h"

Comandos procesamiento(string linea)
{ //Esta funcion recibe una linea de texto y devuelve el comando correspondiente
    if(linea == "ayuda") 
        return AYUDA;
    if(linea == "cargar") 
        return CARGAR;
    if(linea == "listar_secuencias") 
        return LISTAR_SECUENCIAS;
    if(linea == "histograma") 
        return HISTOGRAMA;
    if(linea == "es_subsecuencia") 
        return ES_SUBSECUENCIA;
    if(linea == "enmascarar") 
        return ENMASCARAR;
    if(linea == "guardar") 
        return GUARDAR;
    if(linea == "codificar") 
        return CODIFICAR;
    if(linea == "decodificar") 
        return DECODIFICAR;
    if(linea == "ruta_mas_corta") 
        return RUTA_MAS_CORTA;
    if(linea == "base_remota") 
        return BASE_REMOTA;
    if(linea == "salir") 
        return SALIR;

    return INVALIDO;
}
-----------------------comandos.cxx--------------------------------

-----------------------main.cxx-----------------------------------
#include <iostream>
#include <sstream>
#include <string>

#include "comandos.h"

using namespace std;
int main()
{
    string linea;
    cout << "------------------SISTEMA DE MANIPULACION DE CADENAS DE ADN FASTA------------------" << endl;
    cout << "Escriba 'ayuda' para ver los comandos disponibles." << endl;
    

    while (true) // Asegurarse de que salga del ciclo solo cuando se ingrese el comando salir
    {
        cout << "Ingrese un comando: " << endl;
        cout<< "$";
        getline(cin,linea); //si captura toda la linea de texto
        cout<<endl;

        istringstream iss(linea);
        string cmd; // Se separa el comando de los parametros y se guarda en la variable cmd
        iss>> cmd;

        Comandos comando = procesamiento(cmd);

        //darle las opciones al los if del menú

        switch (comando)  // Cambiado a switch p
        {
        case AYUDA:
            cout<<"------------------AYUDA------------------"<<endl;
            cout<<"Usted ha solicitado ayuda."<<endl;
            cout<<"Comandos disponibles:" << endl;
            cout<<"- ayuda" << endl;
            cout<<"- cargar" << endl;
            cout<<"- listar_secuencias" << endl;
            cout<<"- histograma" << endl;
            cout<<"- es_subsecuencia" << endl;
            cout<<"- enmascarar" << endl;
            cout<<"- guardar" << endl;
            cout<<"- codificar" << endl;
            cout<<"- decodificar" << endl;
            cout<<"- ruta_mas_corta" << endl;
            cout<<"- base_remota" << endl;
            cout<<"- salir" << endl;
            cout<<"----------------FIN AYUDA----------------"<<endl<<endl;
            break;

        case CARGAR:
            cout<<"------------------CARGAR------------------"<<endl;
            cout<<"Usted ha solicitado cargar una secuencia de ADN (FASTA)"<<endl;
            cout<<"---------------FIN CARGAR----------------"<<endl<<endl;
            break;

        case LISTAR_SECUENCIAS:
            cout<<"------------------LISTAR SECUENCIAS------------------"<<endl;
            cout<<"Usted ha solicitado listar las secuencias de ADN"<<endl;
            cout<<"---------------FIN LISTAR SECUENCIAS----------------"<<endl<<endl;
            break;

        case HISTOGRAMA:
            cout<<"------------------HISTOGRAMA------------------"<<endl;
            cout<<"Usted ha solicitado generar un histograma"<<endl;
            cout<<"---------------FIN HISTOGRAMA----------------"<<endl<<endl;
            break;

        case ES_SUBSECUENCIA:
            cout<<"------------------ES SUBSECUENCIA------------------"<<endl;
            cout<<"Usted ha solicitado verificar si una secuencia es subsecuencia de otra"<<endl;
            cout<<"---------------FIN ES SUBSECUENCIA----------------"<<endl<<endl;
            break;

        case ENMASCARAR:
            cout<<"------------------ENMASCARAR------------------"<<endl;
            cout<<"Usted ha solicitado enmascarar una secuencia de ADN"<<endl;
            cout<<"---------------FIN ENMASCARAR----------------"<<endl<<endl;
            break;

        case GUARDAR:
            cout<<"------------------GUARDAR------------------"<<endl;
            cout<<"Usted ha solicitado guardar una secuencia de ADN"<<endl;
            cout<<"---------------FIN GUARDAR----------------"<<endl<<endl;
            break;

        case CODIFICAR:
            cout<<"------------------CODIFICAR------------------"<<endl;
            cout<<"Usted ha solicitado codificar una secuencia de ADN"<<endl;
            cout<<"---------------FIN CODIFICAR----------------"<<endl<<endl;
            break;

        case DECODIFICAR:
            cout<<"------------------DECODIFICAR------------------"<<endl;
            cout<<"Usted ha solicitado decodificar una secuencia de ADN"<<endl;
            cout<<"---------------FIN DECODIFICAR----------------"<<endl<<endl;
            break;

        case RUTA_MAS_CORTA:
            cout<<"------------------RUTA MAS CORTA------------------"<<endl;
            cout<<"Usted ha solicitado encontrar la ruta más corta entre dos secuencias de ADN"<<endl;
            cout<<"---------------FIN RUTA MAS CORTA----------------"<<endl<<endl;
            break;

        case BASE_REMOTA:
            cout<<"------------------BASE REMOTA------------------"<<endl;
            cout<<"Usted ha solicitado acceder a una base de datos remota"<<endl;
            cout<<"---------------FIN BASE REMOTA----------------"<<endl<<endl;
            break;

        case SALIR:
            cout<<"------------------SALIR------------------"<<endl;
            cout<<"Usted ha solicitado salir del programa."<<endl;
            cout<<"Saliendo del programa..."<<endl;
            return 0;
        
        default:
            break;
        }

        //cout<<"Este es el comando seleccionado:" <<comando<<endl;
    }
    return 0;
}
-----------------------main.cxx-----------------------------------


